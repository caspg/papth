<div class="container">
  <h4>Add new thought</h4>
  <div class="row">
    {{#em-form action="saveThougth" model=model submit_button=false}}
      {{em-input property="content" placeholder="Type your thought..."}}
      <div class="form-actions">
        <input type="submit" class="btn btn-default"  value="save"/>
      </div>
      {{link-to "cancel" "dashboard" class="btn btn-default" activeClass=false}}
    {{/em-form}}
  </div>
</div>

